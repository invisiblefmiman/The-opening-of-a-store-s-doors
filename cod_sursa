#include <Arduino.h>
#include <Servo.h>

Servo servo1;
int trigPin = 9;
int echoPin = 8;
int becPin = 6;
long duration;
long distance;

void ultra_sonic();

void setup() {
  servo1.attach(7);
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(becPin, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(2, OUTPUT);

  digitalWrite(becPin, HIGH);
  Serial.begin(9600);
}

void loop() {
  ultra_sonic();
  Serial.print("Distance: ");
  Serial.println(distance);
  digitalWrite(12, LOW);
  digitalWrite(2, HIGH);

  servo1.write(90);

  if (distance <= 9 && distance > 0) {
    servo1.write(0);
    digitalWrite(12, HIGH);
    digitalWrite(2, LOW);
  }
  delay(1900);
}

void ultra_sonic() {
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  duration = pulseIn(echoPin, HIGH);
  distance = duration * 0.034 / 2;
}
